<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FractalController">
   <top>
      <ToolBar prefHeight="40.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <items>
            <ColorPicker fx:id="colorPicker" maxWidth="300.0" onAction="#colorSelected" />
            <ChoiceBox fx:id="fractalArmChoiceBox" prefWidth="100.0" value="1" />
          <Button mnemonicParsing="false" onAction="#decreaseLevelButtonPressed" text="Decrease Level" />
            <Button mnemonicParsing="false" onAction="#increaseLevelButtonPressed" text="Increase Level" />
            <Label fx:id="levelLabel" text="Level: 0" />
        </items>
      </ToolBar>
   </top>
   <center>
      <Canvas fx:id="canvas" height="480.0" width="600.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
